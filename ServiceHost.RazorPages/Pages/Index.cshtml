@await Component.InvokeAsync("LatestArticles")

<!--====================  newsletter area ====================-->
<div class="newsletter-area section-space--inner">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 offset-lg-2">
                <div class="newsletter-wrapper">
                    <p class="small-text">میخوای از درخواستای جدید مطابق با حرفت مطلع شی؟</p>
                    <h3 class="title">ما واست ایمیل میکنیم</h3>
                    <p class="short-desc">
                        ایمیلتو وارد کن تا هم از اخبار سایت مطلع شی و هم درخواست های مطابق با حرفت رو واست ایمیل کنیم.
                    </p>

                    <div class="newsletter-form">
                        <form id="mc-form" class="mc-form">
                            <input type="email" placeholder="ایمیلت رو این جا وارد کن" required>
                            <button type="submit" value="submit">تایید</button>
                        </form>

                    </div>
                    <!-- mailchimp-alerts Start -->
                    <div class="mailchimp-alerts">
                        <div class="mailchimp-submitting"></div><!-- mailchimp-submitting end -->
                        <div class="mailchimp-success"></div><!-- mailchimp-success end -->
                        <div class="mailchimp-error"></div><!-- mailchimp-error end -->
                    </div>
                    <!-- mailchimp-alerts end -->
                </div>
            </div>
        </div>
    </div>
</div>
<!--====================  End of newsletter area  ====================-->
